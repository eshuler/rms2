<h1>Rocky Mountain Division SCCA Event Builder</h1>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>

	<p>
		<%= f.label 'Event Date' %><br />
		<%= f.date_select :evdate %>
	</p>
	<p>
		<%= f.label 'Host Region' %><br />
		<%= f.select :evhostreg, [['COR'],['CDR'],['Utah'],['RGR'],['EIR'],['PAR']] %>
	</p>
	<p>
		<%= f.label 'Event Name' %><br />
		<%= f.text_area :evname , :rows => 1, :cols => 30 %>
	</p>
	<p>
		<%= f.label 'Event Type' %><br />
		<%= f.text_area :evtype , :rows => 1, :cols => 30 %>
	</p>
	<p>
		<%= f.label 'Track' %><br />
		<%= f.select :evtrack, [['HPR'],['PPIR'],['PMP'],['MMP'],['LaJunta'],['MPH'],['Road America']] %>
	</p>
	<p>
		<%= f.label 'Flag Chief' %><br />
		<%= f.text_area :evchief , :rows => 1, :cols => 30 %>
	</p>
	<p>
		<%= f.submit "Create" %>
	</p>
<% end %>

<%= link_to 'Back', events_path %>
