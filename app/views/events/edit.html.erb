<h1>Editing event</h1>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :evdate %><br />
    <%= f.date_select :evdate %>
  </p>
  <p>
    <%= f.label :evhostreg %><br />
    <%= f.text_area :evhostreg %>
  </p>
  <p>
    <%= f.label :evname %><br />
    <%= f.text_area :evname %>
  </p>
  <p>
    <%= f.label :evtype %><br />
    <%= f.text_area :evtype %>
  </p>
  <p>
    <%= f.label :evtrack %><br />
    <%= f.text_area :evtrack %>
  </p>
  <p>
    <%= f.label :evchief %><br />
    <%= f.text_area :evchief %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @event %> |
<%= link_to 'Back', events_path %>
